# Build Optimization Flags

# Generate source maps (disable in production for smaller bundle)
GENERATE_SOURCEMAP=false

# Disable ESLint during build (speeds up build time)
DISABLE_ESLINT_PLUGIN=true

# Image optimization
IMAGE_INLINE_SIZE_LIMIT=10000

# Bundle size limit (in bytes)
BUNDLE_SIZE_LIMIT=512000

# Enable profiling in production build
REACT_APP_PROFILE=false

# Disable console logs in production
REACT_APP_REMOVE_CONSOLE=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
