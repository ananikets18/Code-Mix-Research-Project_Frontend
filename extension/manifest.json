{
    "manifest_version": 3,
    "name": "Code-Mix NLP Analyzer",
    "version": "1.0",
    "description": "Analyze sentiment, toxicity, and language of social media posts.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*",
        "*://*.linkedin.com/*",
        "https://thequoteshub.info/*",
        "https://www.thequoteshub.info/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.svg",
            "48": "icons/icon.svg",
            "128": "icons/icon.svg"
        }
    },
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitter.com/*",
                "*://*.x.com/*",
                "*://*.facebook.com/*",
                "*://*.instagram.com/*",
                "*://*.youtube.com/*",
                "*://*.reddit.com/*",
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}